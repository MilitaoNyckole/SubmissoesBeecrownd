#include <stdio.h>

int main()
{
    int A, notas[7] = {100, 50, 20, 10, 5, 2, 1};

    scanf("%i", &A);
    printf("%i\n", A);

    for (int i = 0; i < 7; i++)
    {
        int nota = A / notas[i];
        printf("%i nota(s) de R$ %d,00\n", nota, notas[i]);
        A -= nota * notas[i];
    }

    return 0;
}






